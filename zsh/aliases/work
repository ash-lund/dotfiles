# Aliases intended for work use

alias dcup='docker-compose up -d'
alias dcd='docker-compose down'
alias dcr='docker-compose restart'
alias dcbash='docker-compose exec -u www-data php bash'

alias log-tail='tail -f {metazo/sites/*,var/log/php}.log'
alias log-trun='truncate -s 0 var/log/php.log && truncate -s 0 metazo/sites/*.log'

